<% if flash[:error] %>
<label>You were unable to be logged in because: </label>
  <% flash[:error].each do |err|%>
    <li><%= err %></li>
  <% end %>
<% end %>

<%= form_tag sessions_path do %>
  <%= text_field_tag :name, nil, placeholder: "Username" %>
  <%= password_field_tag :password, nil, placeholder: "Password" %>
  <%= submit_tag "Sign In" %>

<% end %>
